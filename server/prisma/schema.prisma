generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Game {
  id     Int      @id @default(autoincrement())
  Player Player[]
  Ship   Ship[]
}

model Player {
  id Int @id @default(autoincrement())

  gameId Int
  game   Game @relation(fields: [gameId], references: [id])

  Cell Cell[]
  Ship Ship[]
}

model Ship {
  id     Int     @id @default(autoincrement())
  type   String
  isSunk Boolean

  gameId Int
  game   Game @relation(fields: [gameId], references: [id])

  playerId Int
  player   Player @relation(fields: [playerId], references: [id])
  Cell     Cell[]
}

model Cell {
  id     Int    @id @default(autoincrement())
  X      Int
  Y      Int
  status String

  playerId Int
  player   Player @relation(fields: [playerId], references: [id])

  shipId Int
  ship   Ship @relation(fields: [shipId], references: [id])
}
