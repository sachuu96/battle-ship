generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Game {
  id     Int      @id @default(autoincrement())
  status String
  Player Player[]
  Ship   Ship[]
}

model Player {
  id Int @id @default(autoincrement())

  gameId Int
  game   Game @relation(fields: [gameId], references: [id])

  Cell Cell[]
  Ship Ship[]
  Shot Shot[]
}

model Ship {
  id     Int     @id @default(autoincrement())
  type   String
  isSunk Boolean

  gameId Int
  game   Game @relation(fields: [gameId], references: [id])

  playerId Int
  player   Player @relation(fields: [playerId], references: [id])
  Cell     Cell[]
}

model Cell {
  id Int @id @default(autoincrement())
  X  Int
  Y  Int

  ownedByPlayerId Int
  player          Player @relation(fields: [ownedByPlayerId], references: [id])

  shipId Int
  ship   Ship   @relation(fields: [shipId], references: [id])
  Shot   Shot[]

  @@unique([X, Y, ownedByPlayerId])
}

model Shot {
  id              Int    @id @default(autoincrement())
  status          String
  cellCoordinates Json

  playerId Int
  takenBy  Player @relation(fields: [playerId], references: [id])

  cellId         Int?
  cellIdentifier Cell? @relation(fields: [cellId], references: [id])
}
